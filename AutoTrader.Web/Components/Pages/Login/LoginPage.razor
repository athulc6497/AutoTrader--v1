@page "/"
@layout LoginLayout
@inherits LoginPageBase
@rendermode InteractiveServer

<div class="login-container">
    <div class="form-container">
        <h1>Login</h1>
        <EditForm Model="@LoginUserInfo" OnValidSubmit="HandleSubmit" FormName="Login">
            <div class="form-group row">
                <label for="UserName" class="col-sm-6 col-form-label">Name</label>
                <div class="col-sm-6">
                    <InputText id="Name" class="form-control" placeholder="Name" @bind-Value="LoginUserInfo.UserName" />
                </div>
            </div>

            <div class="form-group row">
                <label for="Password" class="col-sm-6 col-form-label">Password</label>
                <div class="col-sm-6">
                    <InputText id="Password" class="form-control" placeholder="Password" @bind-Value="LoginUserInfo.Password" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-12">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </div>
        </EditForm>
        <div class="register-link">
            <span>Don't have an account? <a href="/register">Sign up</a></span>
        </div>
    </div>
</div>

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        padding: 1rem;
        background-color: #f8f9fa; /* Optional: to provide a background color */
    }

    .form-container {
        background: white; /* Optional: to provide a white background */
        padding: 2rem;
        border-radius: 0.25rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        width: 100%; /* Ensures the form container takes full width */
        max-width: 500px; /* Adjust as needed */
    }

        .form-container h1 {
            text-align: center;
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-control {
        padding: 0.75rem;
        font-size: 1rem;
        border-radius: 0.25rem;
        border: 1px solid #ced4da;
    }

        .form-control:focus {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .btn {
        padding: 0.75rem 1.25rem;
        font-size: 1rem;
        border-radius: 0.25rem;
        cursor: pointer;
    }

    .btn-primary {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
        width: 100%; /* Adjusted to take full width */
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .col-form-label {
        font-weight: bold;
        text-align: right;
    }

    .form-group.row {
        display: flex;
        align-items: center;
    }

        .form-group.row .col-sm-6 {
            display: flex;
            flex-direction: column;
        }

    .register-link {
        text-align: center;
        margin-top: 1rem;
    }

        .register-link a {
            color: #007bff;
            text-decoration: none;
        }

            .register-link a:hover {
                text-decoration: underline;
            }
</style>
