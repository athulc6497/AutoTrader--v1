@page "/carList"
@inherits CarListBase

<h3>Collections</h3>

@if (Cars == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="car-details">
        @foreach (var car in Cars)
        {
            <a href="@($"/cardetailView/{car.CarId}")">
                <div class="car-card">
                    <img src="@car.Image" alt="@car.ModelName" class="car-image" />
                    <div class="car-info">
                        <h4>@car.ModelName</h4>
                        <p>Year: @car.ManufacturingYear</p>
                        <p>Color: @car.ExteriorColor</p>
                        <p>Price: @car.Price</p>
                    </div>
                </div>
            </a>
        }
    </div>
}

<style>
    .car-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); /* Automatically adjust columns */
        gap: 16px;
        padding: 16px;
    }

    .car-card {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 16px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        transition: transform 0.2s;
    }

        .car-card:hover {
            transform: scale(1.05);
        }

    .car-image {
        width: 100%;
        height: 200px; /* Set a fixed height for the image */
        object-fit: cover;
        border-bottom: 1px solid #ccc;
        margin-bottom: 16px;
        border-radius: 8px 8px 0 0;
    }

    .car-info {
        padding-top: 16px;
    }

        .car-info h4 {
            margin: 0 0 8px 0;
        }

        .car-info p {
            margin: 4px 0;
        }
</style>
