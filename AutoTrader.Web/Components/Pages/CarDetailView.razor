@page "/cardetailView/{Id}"
@using Cars.Web.Components.Pages
@inherits CarDetailViewBase

@if (CarInformation == null)
{
    <p>Loading...</p>
}
else
{
    <div class="header-container">
        <div class="main-details">
            <h1>@CarInformation.ModelName</h1>
            <h2>@CarInformation.Price</h2>
        </div>
        <div class="additional-details">
            <p><strong>Engine:</strong> @CarInformation.Engine</p>
            <p><strong>Kms Done:</strong> @CarInformation.KmsDone</p>
            <p><strong>Year:</strong> @CarInformation.ManufacturingYear</p>
        </div>
    </div>
    <div class="car-detail-container">
        <div class="car-detail">
            <img src="@CarInformation.Image" alt="@CarInformation.Ownership @CarInformation.ManufacturingYear" class="car-image" />
            <div class="car-info">
                <div class="detail-row">
                    <p><img src="/images/engine.png" alt="Engine Logo" class="detail-logo" /> <strong>Engine:</strong> @CarInformation.Engine</p>
                    <p><img src="/images/ownership.png" alt="Ownership Logo" class="detail-logo" /> <strong>Ownership:</strong> @CarInformation.Ownership</p>
                    <p><img src="/images/fueltype.png" alt="Fuel Type Logo" class="detail-logo" /> <strong>Fuel Type:</strong> @CarInformation.ManufacturingYear</p>
                </div>
                <div class="detail-row">
                    <p><img src="/images/transmission.png" alt="Transmission Logo" class="detail-logo" /> <strong>Transmission:</strong> @CarInformation.TransmissionId</p>
                    <p><img src="/images/drive.png" alt="Drive Logo" class="detail-logo" /> <strong>Drive:</strong> @CarInformation.DriveId</p>
                    <p><img src="/images/seatingcapacity.png" alt="Seating Capacity Logo" class="detail-logo" /> <strong>Seating Capacity:</strong> @CarInformation.SeatingCapacityId</p>
                </div>
                <div class="detail-row">
                    <p><img src="/images/torque.png" alt="Peak Torque Logo" class="detail-logo" /> <strong>Peak Torque:</strong> @CarInformation.PeakTorque</p>
                    <p><img src="/images/fuel.png" alt="Fuel Logo" class="detail-logo" /> <strong>Fuel:</strong> @CarInformation.FuelId</p>
                </div>


                <style>
                    .detail-logo {
                        width: 20px; /* Adjust size of the logo */
                        height: 20px; /* Adjust size of the logo */
                        margin-right: 5px; /* Add space between logo and text */
                    }
                </style>

                <div class="detail-row">
                    <button @onclick="NavigateToEditPage">Edit</button>
                </div>

            </div>
        </div>
    </div>
}

<style>
    .header-container {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        margin-bottom: 20px;
        padding: 0 20px;
    }

    .main-details {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        margin-right: 20px;
    }

    .additional-details {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        flex: 1;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px; /* Adjust margin between rows */
    }

    .car-detail-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f9f9f9;
    }

    .car-detail {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 55%;
        max-width: 1000px;
    }

    .car-image {
        max-width: 100%;
        height: auto;
        margin-bottom: 20px;
        border-radius: 10px;
    }

    .car-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        max-width: 600px;
    }
</style>
